<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %5p | %-64logger{64} | %m %n</pattern>
        </encoder>
    </appender>

    <logger name="org.hodgson">
        <level value="INFO"/>
    </logger>

    <root>
        <level value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
